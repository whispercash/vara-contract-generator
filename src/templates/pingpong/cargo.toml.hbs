[workspace.package]
homepage = "http://yourhomepage.com"
authors = ["Your Name <you@example.com>"]
version = "0.1.0"
license = "MIT"
edition = "2021"
publish = false

[package]
name = "{{project_name}}"
version.workspace = true
edition.workspace = true
publish.workspace = true

# add libraries needed in folders in the workspace here
[dependencies]
gstd.workspace = true
template-io.workspace = true

# add libraries needed in folders in the workspace here
[build-dependencies]
gear-wasm-builder.workspace = true
template-io.workspace = true

# add libraries needed in folders in the workspace here
[dev-dependencies]
gtest.workspace = true
gclient.workspace = true
tokio.workspace = true

# It's necessary to include all metawasm crates in the workspace section, otherwise they'll be
# ignored by Cargo and won't be built.
[workspace]
members = ["state"]

[workspace.dependencies]
gstd = "1.3.0"
gmeta = "1.3.0"
gear-wasm-builder = "1.3.0"
gtest = "1.3.0"
gclient = "1.3.0"
template-io.path = "io"
tokio = "1"
xshell = "0.2"
anyhow = "1"
